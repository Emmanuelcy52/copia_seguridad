<egresardineroScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 30
        canvas.before:
            Color:
                rgba: 0.98, 0.55, 0, 1  # Color de fondo del layout
            Rectangle:
                size: self.size
                pos: self.pos

        Widget:  # Espaciador superior
            size_hint_y: None
            height: 2

        # Encabezado
        BoxLayout:
            size_hint_y: 0.2
            size_hint_x: .5
            pos_hint: {'center_x': 0.5}
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos  # Posición del TextInput
                    size: self.size  # Tamaño del TextInput
                    radius: [20]

            Image:
                source: root.ruta_imagenes + "/low-price.png"
                size_hint: .5, 0.8
                pos_hint: {"center_y": 0.5} 

            Label:
                text: "[b]Sacar dinero de la caja[/b]"
                font_size: 32
                markup: True  # Habilitar etiquetas de formato
                color: 0, 0, 0, 1

            Image:
                source: root.ruta_imagenes + "/low-price.png"
                size_hint: .5, 0.8
                pos_hint: {"center_y": 0.5} 

        # Inputs
        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            padding: 20
            size_hint_y: 1
            size_hint_x: 0.5
            pos_hint: {'center_x': 0.5}
            canvas.before:
                RoundedRectangle:
                    pos: self.pos  # Posición del BoxLayout
                    size: self.size  # Tamaño del BoxLayout
                    radius: [20]

            Label:
                text: "[b]Ingresa la cantidad a retirar[/b]"
                font_size: self.width * 0.06
                markup: True  # Habilitar etiquetas de formato
                color: 0, 0, 0, 1

            BoxLayout:
                size_hint_y: 0.7
                size_hint_x: .9
                spacing: 15
                pos_hint: {'center_y': 0.5,'center_x':0.5}

                Image:
                    source: root.ruta_imagenes + "/atm.png"
                    size_hint: .5, 0.9
                    pos_hint: {"center_y": 0.5}

                TextInput:
                    id: dineroRetirar
                    hint_text: "Ingresa la cantidad"
                    multiline: False
                    font_size: self.width * 0.08
                    size_hint: 1, .8
                    pos_hint: {"center_y": 0.5}
                    halign: 'center' 
                    valign: 'middle'
                    input_filter: 'float'

            Label:
                text: "[b]motivo del retiro[/b]"
                font_size: self.width * 0.06
                markup: True  # Habilitar etiquetas de formato
                color: 0, 0, 0, 1

            BoxLayout:
                size_hint_y: 0.7
                size_hint_x: .9
                spacing: 15
                pos_hint: {'center_y': 0.5,'center_x':0.5}

                Image:
                    source: root.ruta_imagenes + "/fair-price.png"
                    size_hint: .5, 0.9
                    pos_hint: {"center_y": 0.5}

                TextInput:
                    id: motivoRetiro
                    hint_text: "Ingresa el motivo"
                    font_size: self.width * 0.08
                    size_hint: 1, .8
                    pos_hint: {"center_y": 0.5}
                    halign: 'center' 
                    valign: 'middle'
                

        # Botón
        BoxLayout:
            size_hint_y: 0.13
            size_hint_x: 0.5
            pos_hint: {'center_x': 0.5 }
            spacing: 20
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Color de fondo del layout
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button:
                text: "[b]Registrar ergeso[/b]"
                markup: True
                size_hint: .5, .7
                pos_hint: {'center_y': 0.5}
                on_press: root.Registar_egreso()
                background_normal: ''  
                background_color: 0, 1, 0.2, 1  
                color: 0 , 0 , 0 , 1

            Button:
                text: "[b]Cancelar[/b]"
                markup: True
                size_hint: .5, .7
                pos_hint: {'center_y': 0.5}
                on_press: app.root.get_screen('home').dismiss_popup()
                background_normal: ''  
                background_color: 1, 0, 0, 1  
                color: 0 , 0 , 0 , 1


        # Mensaje final
        BoxLayout:
            size_hint_y: root.size_hint_y_menssage
            size_hint_x: root.size_hint_x_menssage
            height: root.height_message  
            pos_hint: {'center_x': 0.5}
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Color de fondo del layout
                Rectangle:
                    size: self.size
                    pos: self.pos

            Image:
                source: root.ruta_imagenes + "/alarm.png"
                size_hint: .2, .5
                pos_hint: {"center_y": 0.5} 

            Label:
                id: message
                text: ""
                color: (1, 1, 1, 1) 
                font_size: self.width * 0.06
                bold: True 

            Image:
                source: root.ruta_imagenes + "/alarm.png"
                size_hint: .2, .5
                pos_hint: {"center_y": 0.5} 
